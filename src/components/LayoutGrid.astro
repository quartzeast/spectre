<div class="layout-grid">
  <slot name="left" />
  <slot name="right" />
</div>

<style>
  .layout-grid {
    position: relative;
    align-items: start;
    align-content: stretch;
    display: grid;
    gap: 3rem;
    grid-template-columns: 2fr 5fr;
    grid-template-rows: auto;
    min-height: 100vh;
    padding: 2rem 0;
  }

  /* 确保网格项目顶部对齐 */
  .layout-grid > * {
    margin-top: 0 !important;
  }

  @media screen and (max-width: 1380px) {
    .layout-grid {
      grid-template-columns: 1fr;
      gap: 2.5rem;
    }
  }

  @media screen and (max-width: 768px) {
    .layout-grid {
      gap: 2rem;
      padding: 1.5rem 0;
    }
  }

  @media screen and (max-width: 640px) {
    .layout-grid {
      margin: 0 1rem;
      gap: 1.5rem;
      padding: 1rem 0;
    }
  }
</style>
